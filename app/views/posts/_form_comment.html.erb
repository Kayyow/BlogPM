<%= form_for([@post, @post.comments.build]) do |f| %>
    
    <div class="control-group">
        <div class="form-group col-xs-5 floating-label-form-group controls">
            <%= f.label :name, 'Nom/Pseudo' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Nom/Pseudo', id: 'name', required: '', data: { validation_required_message: 'Veuillez entrer votre nom.' } %>
            <p class="help-block text-danger"></p>
        </div>
        <div class="form-group col-xs-6 col-xs-offset-1 floating-label-form-group controls">
            <%= f.label :email, 'Adresse email' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Adresse email', id: 'email', required: '', data: { validation_required_message: 'Veuillez entrer votre adresse email.' } %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div class="control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.label :message, 'Commentaire' %>
            <%= f.text_area :message, class: 'form-control', rows: 3, placeholder: 'Commentaire', id: 'comment', required: '', data: { validation_required_message: 'Veuillez entrer un commentaire.' } %>
            <p class="help-block text-danger"></p>
        </div>
    </div>
    <div id="success"></div>
    <div class="row">
        <div class="form-group col-xs-12">
            <br>
            <button type="submit" class="btn btn-default">Envoyer</button>
        </div>
    </div>

<% end %>