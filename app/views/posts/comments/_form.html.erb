<%= form_for([@post, @new_comment], html: { novalidate: 'novalidate' }) do |f| %>
    <div class="row control-group">
        <div class="form-group col-xs-5 floating-label-form-group controls">
            <%= f.label :name, 'Nom/Pseudo' %>
            <%= f.text_field :name, class: 'form-control', placeholder: 'Nom/Pseudo', id: 'name', required: '' %>
        </div>
        <div class="form-group col-xs-6 col-xs-offset-1 floating-label-form-group controls">
            <%= f.label :email, 'Adresse email' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Adresse email', id: 'email', required: '' %>
        </div>
    </div>

    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.label :message, 'Commentaire' %>
            <%= f.text_area :message, class: 'form-control', rows: 3, placeholder: 'Commentaire', id: 'comment', required: '' %>
        </div>
    </div>

    <br>

    <% if @new_comment && @new_comment.errors.any? %>
        <div class="row">
            <div id="errors" class="alert alert-warning" data-errors="true">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <ul>
                    <% @new_comment.errors.messages.each do |attribute, messages| %>
                        <% if messages.any? %>
                            <li>
                                <strong><%= t attribute %></strong>
                                <ul>
                                    <% messages.each do |message| %>
                                        <li><%= message %></li>
                                    <% end %>
                                </ul>
                            </li>
                        <% end %>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>

    <div class="row control-group">
        <div class="form-group col-xs-12">
            <button type="submit" class="btn btn-default">Envoyer</button>
        </div>
    </div>

<% end %>